---
import CommunityGrid from "../../components/CommunityGrid.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import i18nya, { makeT } from "../../i18n.ts";
import { makeGetStaticPaths } from 'astro-i18nya';
const t = makeT(Astro.params.lang ?? "en");
export const getStaticPaths = makeGetStaticPaths(i18nya);
---

<BaseLayout lang={Astro.params.lang}>
  <div
    class="flex flex-col items-start max-w-(--breakpoint-xl) mx-auto px-8 md:px-16 mt-12"
  >
    <h1 class="text-4xl font-bold">{t("community.joinUs")}</h1>
    <h2 class="pt-1 text-gray-500">
      {t("community.buildFuture")}
    </h2>

    <CommunityGrid />
  </div>
</BaseLayout>
