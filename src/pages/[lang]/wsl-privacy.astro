---
import { defaultLang, languages, makeT } from "../../i18n";
import BaseLayout from "../../layouts/BaseLayout.astro";

const t = makeT(Astro.params.lang);

export async function getStaticPaths() {
  return Object.keys(languages).filter(lang => lang !== defaultLang).map((lang) => ({ params: { lang: lang } }));
}
---

<BaseLayout lang={Astro.params.lang}>
  <div
    class="flex flex-col items-start max-w-(--breakpoint-2xl) mx-auto px-8 md:px-16 mt-12"
  >
    <h1 class="text-4xl font-bold mb-2">{t("wslPrivacy.title")}</h1>
    <p>
      {t("wslPrivacy.description", { email: (<a href="mailto:contact@fyralabs.com">contact@fyralabs.com</a>)})}      
    </p>
  </div>
</BaseLayout>
