---
import BackMenu from "../components/BackMenu.vue";
import DownloadSection from "../components/DownloadSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import flagshipScreenshot from "../assets/42/screenshots/flagship.png";
import gnomeScreenshot from "../assets/41/screenshots/gnome.png";
import xfceScreenshot from "../assets/41/screenshots/xfce.png";
import plasmaScreenshot from "../assets/41/screenshots/plasma.png";
---

<BaseLayout>
  <div
    class="min-h-screen text-gray-900 bg-gray-100 dark:text-gray-200 dark:bg-gray-900"
  >
    <div
      class="flex flex-col min-h-screen p-2 md:px-12 text-gray-900 bg-gray-100 place-content-center md:items-center dark:bg-gray-900 dark:text-gray-100"
    >
      <BackMenu targetLink="/download" target="Downloads" />
      <h1 class="text-4xl font-bold">Microsoft Surface Builds</h1>
      <h2 class="pt-3 text-gray-400">
        You can find Microsoft Surface builds of Ultramarine Linux 41 here. More
        info can be found on our Wiki.
      </h2>
      <div class="">
        <div
          class="grid grid-flow-row-dense grid-cols-1 gap-10 pt-12 md:grid-cols-2 md:flex-row"
        >
          <DownloadSection
            editionName="Flagship"
            screenshot={flagshipScreenshot}
            description="The flagship edition with the latest and greatest software and our best polish. Powered by Budgie Desktop. (Recommended)"
            downloadLink="https://images.fyralabs.com/isos/ultramarine/42/ultramarine-flagship-42-surface-x86_64.iso"
          />

          <DownloadSection
            editionName="GNOME"
            screenshot={gnomeScreenshot}
            description="GNOME is a simple, elegant, and intuitive desktop environment with a focus on productivity."
            downloadLink="https://images.fyralabs.com/isos/ultramarine/42/ultramarine-gnome-42-surface-x86_64.iso"
          />

          <DownloadSection
            editionName="XFCE"
            screenshot={xfceScreenshot}
            description="Xfce is a lightweight but elegant desktop designed to help you squeeze the most out of your device, or revive an old one."
            downloadLink="https://images.fyralabs.com/isos/ultramarine/42/ultramarine-xfce-42-surface-x86_64.iso"
          />

          <DownloadSection
            editionName="KDE Plasma"
            screenshot={plasmaScreenshot}
            description="The good old familiar KDE Plasma Desktop Environment --- simple by default, powerful when needed."
            downloadLink="https://images.fyralabs.com/isos/ultramarine/42/ultramarine-plasma-42-surface-x86_64.iso"
          />
        </div>
      </div>
    </div>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
    />
  </div>
</BaseLayout>
