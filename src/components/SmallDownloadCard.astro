---
import LongArrow from "../components/icons/LongArrow.astro";

const { title, description, link } = Astro.props;
---

<a href={link}>
  <div class="flex flex-col gap-2 p-6 rounded-lg bg-gray-900 hover:bg-gray-800 transition-colors max-w-96">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="text-gray-400">{description}</p>
    <div class="flex flex-row w-full justify-end mt-2">
      <LongArrow />
    </div>
  </div>
</a>
